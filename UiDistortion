Shader "UiDistortion"
{
    Properties
    {
        [NoScaleOffset] [PerRendererData] _MainTex ("Sprite Texture", 2D) = "white" {}
        [NoScaleOffset] _DistortionMask ("Distortion mask", 2D) = "white" {}
        [Normal]        _Distortion     ("Distortion", 2D) = "white" {}
        _DistortionAmount ("Distortion Amount", Range(0, 2)) = 1.00

        _DistortionScrollH ("Distortion Horizontal scroll", Range(-0.5, 0.5)) = 0.5
        _DistortionScrollV ("Distortion Vertical scroll", Range(-0.5, 0.5)) = 0.5

        // Parameter for adjusting the distortion texture's size.
        _DistortionSize ("Distortion Texture Size", Range(0.01, 100)) = 1.0

        _Color ("Tint", Color) = (1,1,1,1)

        _StencilComp ("Stencil Comparison", Float) = 8
        _Stencil     ("Stencil ID", Float) = 0
        _StencilOp   ("Stencil Operation", Float) = 0
        _StencilWriteMask ("Stencil Write Mask", Float) = 255
        _StencilReadMask  ("Stencil Read Mask", Float) = 255

        _ColorMask ("Color Mask", Float) = 15

        [Toggle(UNITY_UI_ALPHACLIP)] _UseUIAlphaClip ("Use Alpha Clip", Float) = 0

        // Noise texture for multiply effect:
        _NoiseTex      ("Noise Texture", 2D) = "white" {}
        _NoiseAmount   ("Noise Amount", Range(0, 1)) = 0.1
        _NoiseSize     ("Noise Size", Float) = 1.0
        // Noise clipping threshold:
        _NoiseThreshold ("Noise Threshold", Range(0,1)) = 0.1
        _UnscaledTime ("Unscaled Time", Float) = 0
    }

    SubShader
    {
        Tags
        {
            "Queue"="Transparent"
            "IgnoreProjector"="True"
            "RenderType"="Transparent"
            "PreviewType"="Plane"
            "CanUseSpriteAtlas"="True"
        }

        Stencil
        {
            Ref [_Stencil]
            Comp [_StencilComp]
            Pass [_StencilOp]
            ReadMask [_StencilReadMask]
            WriteMask [_StencilWriteMask]
        }

        Cull Off
        Lighting Off
        ZWrite Off
        ZTest [unity_GUIZTestMode]
        Blend SrcAlpha OneMinusSrcAlpha
        ColorMask [_ColorMask]

        Pass
        {
            Name "Default"
        CGPROGRAM
            #pragma vertex vert
            #pragma fragment frag
            #pragma target 2.0

            #include "UnityCG.cginc"
            #include "UnityUI.cginc"

            #pragma multi_compile_local _ UNITY_UI_CLIP_RECT
            #pragma multi_compile_local _ UNITY_UI_ALPHACLIP

            struct appdata_t
            {
                float4 vertex   : POSITION;
                float4 color    : COLOR;
                float2 texcoord : TEXCOORD0;
                UNITY_VERTEX_INPUT_INSTANCE_ID
            };

            struct v2f
            {
                float4 vertex         : SV_POSITION;
                fixed4 color          : COLOR;
                float2 texcoord       : TEXCOORD0;
                // Local position for distortion sampling.
                float4 localPosition  : TEXCOORD1;
                UNITY_VERTEX_OUTPUT_STEREO
            };

            sampler2D _MainTex;
            sampler2D _Distortion;
            float4   _Distortion_ST;
            fixed    _DistortionScrollH;
            fixed    _DistortionScrollV;

            sampler2D _DistortionMask;
            float     _DistortionAmount;
            fixed4    _Color;
            fixed4    _TextureSampleAdd;
            float4    _ClipRect;
            float4    _MainTex_ST;

            float     _DistortionSize;

            // Noise texture and related parameters:
            sampler2D _NoiseTex;
            float     _NoiseAmount;
            float     _NoiseSize;
            float     _NoiseThreshold;
            float     _UnscaledTime;

            v2f vert(appdata_t v)
            {
                v2f OUT;
                UNITY_SETUP_INSTANCE_ID(v);
                UNITY_INITIALIZE_VERTEX_OUTPUT_STEREO(OUT);

                // Use the original vertex position (local space).
                OUT.localPosition = v.vertex;
                OUT.vertex        = UnityObjectToClipPos(v.vertex);

                OUT.texcoord = TRANSFORM_TEX(v.texcoord, _MainTex);
                OUT.color    = v.color * _Color;
                return OUT;
            }

            fixed4 frag(v2f IN) : SV_Target
            {
                // Get mask value from the distortion mask.
                fixed mask = tex2D(_DistortionMask, IN.texcoord).r;

                fixed2 offset = _Distortion_ST.zw
                              + fixed2(_UnscaledTime * _DistortionScrollH,
                                       _UnscaledTime * _DistortionScrollV);

                // Sample the distortion texture using local position scaled by _DistortionSize and 0.001.
                fixed4 distortionSample = tex2D(
                    _Distortion,
                    IN.localPosition.xy * _Distortion_ST.xy * _DistortionSize * 0.001
                    + offset
                );
                fixed2 distortion = (distortionSample.rg - 0.5) * 2.0
                                   * mask * (_DistortionAmount / 100);

                // Apply the distortion to the main texture UVs.
                half4 color = (tex2D(_MainTex, IN.texcoord + distortion)
                               + _TextureSampleAdd) * IN.color;

                // Sample the noise texture with scaled UVs.
                fixed4 noise = tex2D(_NoiseTex, IN.texcoord * _NoiseSize);

                // Create a hard threshold for noise.
                float noiseFactor = 1.0 - step(_NoiseThreshold, noise.r);

                // Blend the original color with the noise‚Äêdarkened version.
                color.rgb = lerp(color.rgb,
                                 color.rgb * noiseFactor,
                                 _NoiseAmount);

                #ifdef UNITY_UI_CLIP_RECT
                color.a *= UnityGet2DClipping(IN.localPosition.xy, _ClipRect);
                #endif

                #ifdef UNITY_UI_ALPHACLIP
                clip (color.a - 0.001);
                #endif

                return color;
            }
        ENDCG
        }
    }
}
